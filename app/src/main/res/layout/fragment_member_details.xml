<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MemberDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/member_details_shop_imageview"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/poly_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/member_details_profile_imageview"
            android:src="@drawable/error_picture"
            android:layout_width="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="80dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/member_details_person_name_textview"
                android:text="Firoz Mahmud"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:shadowColor="@android:color/black"
                android:shadowRadius="3"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/address"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="Thaherpur,Rajshahi"
                        android:textColor="@android:color/white"
                        android:id="@+id/member_details_member_address_textview"
                        android:layout_gravity="center"
                        android:shadowColor="@android:color/black"
                        android:shadowRadius="3"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:padding="10dp"
            android:text="10/12/1999"
            android:id="@+id/member_details_date_textview"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:textColorHint="@android:color/white"
            android:shadowRadius="8"
            android:layout_gravity="top|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_width="300dp"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Security"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/member_details_security_textview"
                    android:paddingTop="5dp"
                    android:textColor="@color/textColor"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="220"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Monthly"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="5dp"
                    android:textColor="@color/textColor"
                    android:id="@+id/member_details_monthly_payment_textview"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="100dp" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
<TextView
    android:text="Total Paid"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/member_details_total_payed_textview"
                    android:paddingTop="5dp"
                    android:textColor="@color/textColor"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="220"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="Total Due"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingTop="5dp"
                    android:textColor="@color/textColor"
                    android:id="@+id/member_details_total_due_textview"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="300dp"
        >
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/phone"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:text="01713716821"
        android:paddingLeft="20dp"
        android:id="@+id/member_details_phone_number_textview"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/address"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="Thaherpur,Rajshahi"
                android:textColor="@android:color/black"
                android:paddingLeft="20dp"
                android:id="@+id/member_details_shop_address_textview"
                android:layout_gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>